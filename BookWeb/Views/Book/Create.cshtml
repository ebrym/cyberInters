@model BookWeb.Entities.Book
@{
    ViewData["Title"] = "Book";
}
<!-- ============================================================== -->
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Book</h3>
    </div>
  <!--   <div class="col-md-7 align-self-center">
       <a href="https://wrappixel.com/templates/adminpro/" class="btn waves-effect waves-light btn-danger pull-right hidden-sm-down"> Upgrade to Pro</a>
    </div>--> 
</div>

<div class="row">
    <!-- column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">New Author</h4>
                <!-- <h6 class="card-subtitle">Add New Author</h6>-->
                <div class="table-responsive">
                    <form asp-action="Create" method="post" class="mt-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title">Title</label>
                            <input type="text" asp-for="Title" class="form-control" placeholder="Title" required="">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GenreId">Genre</label>
                            <select asp-for="GenreId" asp-items="@ViewBag.genre"
                                    class="form-control custom-select">
                                <option value="">Please select one</option>
                            </select>
                            <span asp-validation-for="GenreId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="AuthorId">Genre</label>
                            <select asp-for="AuthorId" asp-items="@ViewBag.author"
                                    class="form-control custom-select" required="">
                                <option value="">Please select one</option>
                            </select>
                            <span asp-validation-for="AuthorId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ISBN">ISBN</label>
                            <input type="text" asp-for="ISBN" class="form-control" placeholder="ISBN" required="">
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rating">Rating</label>
                            <input type="number" asp-for="Rating" class="form-control" placeholder="Rating" required="">
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Summary">Summary</label>
                            <input type="text" asp-for="Summary" class="form-control" placeholder="Summary" required="">
                            <span asp-validation-for="Summary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="YearPublish">YearPublish</label>
                            <input type="text" asp-for="YearPublish" class="form-control" placeholder="YearPublish" required="">
                            <span asp-validation-for="YearPublish" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Submit</button>
                        <button type="submit" class="btn btn-dark">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>